<% if user_signed_in? %>
  <table class = "table table-bordered table-striped">
    <%= form_tag(users_path, :method => "get", id: "search-form") do %>
      <%= text_field_tag :search, params[:search], placeholder: "Search Posts" %>
      <%= submit_tag "Search" %>
    <% end %>
    <thead>
      <tr>
        <th>User</th>
        <% if current_user.admin? %>
          <th>Action</th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |u| %>

        <tr>
          <td><%= link_to u.name, u %></td>
          <td><%= button_to "Delete",  u, method: :delete, class: "btn btn-danger", :data =>{confirm: "Are you sure that you wish to delete #{u.name}?"} if current_user.admin? && u != current_user %></td>
        </tr>

      <% end %>
    </tbody>
     
  </table>
<% end %>
