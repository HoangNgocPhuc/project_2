<div class="container">
	<div class="row">
		<div class="col-md-8"></div>
		<div class="col-md-3 list-notice" id="list-notice">
		<% @noti.each do |c| %>
			<div class="row content">
				<div class="avatar col-md-3"><img src="https://encrypted-tbn2.gstatic.com/images?q=tbn:ANd9GcS9SmUZqSy0j-8jxEmIfVQorIFo0nQbSH4mJ5CoyLcfz3STh76IehGALDI" width="50px" height="50px"></div>
				<div class="col-md-9">
					<div class="text"><%= c.notificable.user.name %> <%= c.notificable_type == "Comment" ? "commented" : "liked" %> your post</div>
					<div class="time"><%= time_ago_in_words(c.created_at) %> ago</div>
				
				</div>
				<br style="color: black">
			</div>
		<% end %>
		</div>
	</div>
</div>